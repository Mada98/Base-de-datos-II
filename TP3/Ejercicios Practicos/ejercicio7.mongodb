use('tiendaOnline')
//Tarea 1
db.productos.aggregate([
    {$project: {
        nombre: 1,
        precio: 1,
        clasfProducto: {
            $cond: {
                if: {$lt: ['$precio', 100]},
                then: 'Economico',
                else: {
                    $cond: {
                        if: {$lte: ['$precio', 500]},
                        then: 'Estandar',
                        else: 'Premiun'
                    }
                }
            }
        }
    }}
])
